    {% set tid = link.options.item_attributes.style %}

    {% set image_menu = file_load(link.options.content.image) %}
    {% set image_menu = file_create_url(image_menu.uri %})

    /*** Get content by categorie ***/
    {% set query = EntityFieldQuery() %}
    {% set query.entityCondition('entity_type', 'node')
          .entityCondition('bundle', 'lado_b')
          .propertyCondition('status', NODE_PUBLISHED       
          .fieldCondition('field_categoria', 'tid', tid, '=')                
          .fieldCondition('field_principal_home', 'value', '0', '=')
          .fieldCondition('field_destacada', 'value', '0', '=')
          .propertyOrderBy('created', 'DESC')
          .range(0, 3)) %}
    {% set contents = query.execute() %}
    {% set contents = contents.node %}
   
   <div id="{{ id }}" class="overlay-lado-b {{ class }}close hidden-xs hidden-sm" style="background-image: url({{ image_menu }})">
    <div class="lado-b-menu-content">
     <div class="main-menu">
      <div class="menu-content">
       <h1 class="menu-title">{{ link.link_title }}</h1>

        <ul class="menu-list-notes">
         
           {% for content, nid in contents %}
           {% set nid =  content.nid %}       
           {% set node = node_load(nid) %}
           {% set path = drupal_get_path_alias('node/'~nid) %}
           {% set title = node.title %}
         
          <li><a href="{{ base_url~'/'~path }}}" class="list-note-link">{{ title }}}</a></li>
        {% endfor %}
