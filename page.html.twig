     {% set nutritional_menu = menu_load_links('menu-menu-productos') %}     
     {% for menu, link in nutritional_menu %}
      {% if link.hidden == 1 %}{% set continue = true %}
      {% if link.has_children == 1 %}
       
      {% set  menu_id = link.mlid %}
      {% set  menu_link = link.link_title == 'Chips' ? 'Chip´s' : link.link_title %}      
       

       <li class="sub-menu">
         <a href="#">
          <span>{{ menu_link }}</span><i class="arrow pull-right"></i>
         </a>
         <ul>
          {% for submenu, sublink in nutritional_menu %}
           {% if sublink.hidden == 1 %}{% set continue = true %}
           
            {% set tid = sublink.link_path |split('/') %}
            {% set tax = taxonomy_term_load(tid.2) %}
            {% set node_url = if tax.field_link_nutrimental'und' is defined ? tax.field_link_nutrimental'und'.0.value : "node/3" %}         
           
           {% if sublink.has_children == 0 and sublink.plid == menu_id %}
            <li><a href="{{ node_url }}" class="info-link">{{ sublink.link_title }}</a></li>
           {% endif %}
          {% endfor %}
         </ul>
       </li>
      {% endif %} 
     {% endfor %}    
   </div>   
  </div>
 </div>
</div>

