{{base_url}}  
	
	{% set theme_url = drupal_get_path('theme','barcel') %}
	{% set theme_base = base_url~'/'~theme_url~'/' %}


<section id="categorie-notes-section" class="section-container">
	<div class="container categorie-container">
		<div class="row">
			
				{% for key, value in rows %}
					{% set nid = view.render_field('nid',key) %}
			  	{% set node = node_load(nid) %}
			  	{% set path = drupal_get_path_alias('node/'~nid) %}
	                        
	        {% set title = node.title      
	        {% set summary = node.field_resumen'und'.0.value %}     
	        {% set image_note = file_load(node.field_imagen_resumen'und'.0.fid) %}
	        {% set image_note = file_create_url(image_note.uri %}

	        {% set cat = node.field_categoria'und'.0.tid %}
	  	    {% set cat = taxonomy_term_load(cat) %}
	  	    {% set cat = cat.name %}

	  	    {% if cat == "Música" %}{% set class = "music"%}{% elseif cat == "Gaming" %}{% set class = "gaming"{% else %}{% set class = "pop" %}{% endif %}
			
		    	<div class="col-xs-12 col-md-4">
		      <div class="note-card">
		        	<img class="note-card-img img-responsive" src="{{ image_note }}}" alt="">
		        	<div class="note-card-body {{ class }}}">
		        		<span class="note-card-categorie {{ class }}">{{ cat }}</span>
			        <h4 class="note-card-title">{{ title }}</h4>
			        <p class="note-card-text">{{ summary }}</p>
			        <a class="btn btn-primary note-card-btn text-uppercase {{ class }}" href="{{ base_url~'/'~path }}">Leer Más</a>
		        	</div>
		      </div>
	     	</div>
	    {% endfor %}     	
	  </div>
	</div>
</section>