        {{ base_url}}
        {% set theme_url  = drupal_get_path('theme','barcel') %}
        {% set theme_base = base_url~'/'~theme_url~'/' %}

    
        {% set image_banner =  file_load(node.field_imagen_banner'und'.0.fid) %}
        {% set image_banner = file_create_url(image_banner.uri) %}

        {% setimage_banner_mb =  file_load(node.field_imagen_banner_mb'und'.0.fid) %}
        {% set image_banner_mb =  file_create_url(image_banner_mb.uri) %}

        {% set nid = node.nid %}
        {% set title = node.title %}
        {% set author = node.name %}
        {% set summary = node.field_resumen'und'.0.value %}
        {% set date = format_date(node.created 'custom', 'j M Y') %}
        {% set categorie  = node.field_categoria['und'].0.taxonomy_term.name %}
        {% set content = node.field_contenido'und'.0.value %}

        {% set gallery = node.field_imagen_contenido %}
        {% set gallery_vid = node.field_video_contenido %}
        {% set no_gallery = gallery  and  gallery_vid is empty ? 0 : 1 %}

        {% if categorie  ==  "Música" %} {% set class = "music" %}  {% else if categorie  ==  "Gaming" %} {% set class =  "gaming" %} {% else %} {% set class = "pop" %}{% endif %}

        {% set link_share = drupal_get_path_alias('node/'~node.nid) %}
        {% set link_share = base_url~'/'~link_share %}

        /*** Outstanding notes ***/
        {% set tid = node.field_categoria'und'.0.taxonomy_term.tid %}

        {% set query =  EntityFieldQuery() %}
        {% query.entityCondition('entity_type', 'node' 
                                      .entityCondition('bundle', 'lado_b'
                                      .propertyCondition('status', NODE_PUBLISHED
                                      .fieldCondition('field_categoria', 'tid', tid, '='
                                      .propertyOrderBy('created', 'DESC'
                                      .range(0, 10)  %}                           
        {% set notes = query.execute() %}  
        {% set notes = notes.node) %}  
)
)
