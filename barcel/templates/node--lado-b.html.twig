<!-- Section content Banner node -->
<section id="node-banner-section" class="section-container">
        <div class="node-banner-container">
                <!-- Banner promocional -->
                <div class="jumbotron banner-node">
                        <img src="{{ image_banner}} " class="img-responsive hidden-xs hidden-sm">
                        <img src="{{ image_banner_mb }} " class="img-responsive hidden-md hidden-lg">
                </div>

                <img src="{{ theme_base }}images/scroll-page.png" class="img-responsive scroll-page">
        </div>
</section>

<section id="node-content-section" class="section-container">
        <div class="node-container container {{ class }} ">
                <div class="row">
                        <div class="col-xs-12">
                                <span class="note-categorie {{ class }} ">{{ categorie }} </span>
                                <h1 class="note-title">{{ title }}  <br> <small>{{ summary }} </small></h1>
                                <span class="note-author"><i></i> Por {{ author~' / '~date }} </span>
                        </div>
                </div>
                <div class="row">
                        <div class="col-xs-12">
                                <div class="note-content-text">
                                        {{ content }}
                                </div>
                        </div>
                </div>
                <div class="row">
                        <div class="col-xs-12">
                                {% if no_gallery %}
                                        <div id="note-gallery" style="display:none;">
                                                {% if gallery is not empty %}

                                                                {% set gallery = gallery.und %}

                                                                {% for images, image in gallery %}
                                                                       {% set image_gallery =  file_create_url(image.uri) %}

                                                                <img alt="" src="{{ image_gallery }} " data-image="{{ image_gallery }} " data-description="">
                                                        {% endfor %}
                                                {% endif %}

                                                {% if gallery_vid is not empty %}

                                                                {% set gallery =  gallery_vid.und %}

                                                                {% for videos, video in gallery %}
                                                                       {% set video_gallery_id =  video.video_id %}

                                                                <img alt="" data-type="youtube" data-videoid="{{ video_gallery_id }} " data-description="">
                                                        {% endfor %}
                                                {% endif %}
                                        </div>
                                {% endif %}
                        </div>
                </div>
        </div>
</section>

<section id="node-carousel-section" class="section-container">
        <div class="node-carousel-container container">
                <h2 class="mas-title text-uppercase">Más <span>Lados B</span> para ti</h2>

                <div class="row">
                        <div class="owl-carousel owl-theme">

                                {% for note, nid in notes %}   
                                {% set nid = note.nid %}
                                {% set node = node_load(nid) %}
                                {% set path = drupal_get_path_alias('node/'~nid) %}

                                {% set title = node.title %}
                                {% set summary = node.field_resumen'und'.0.value %}
                                {% set image_note  = file_load(node.field_imagen_resumen'und'.0.fid) %}
                                {% set image_note = file_create_url(image_note.uri) %}

                                {% set cat = node.field_categoria'und'.0.tid %}
                                {% set cat = taxonomy_term_load(cat) %}
                                {% set cat = cat.name %}

                                {% if cat  ==  "Música" %} {% set class = "music" %} {% else if cat  ==  "Gaming" %} {% set class =  "gaming" %} {% else %}  {% set class  "pop" %} {% endif %}
                                
                                <div class="item">
                                    <div class="note-card">
                                        <img class="note-card-img img-responsive" src="{{ image_note }} " alt="">
                                        <div class="note-card-body {{ class }} ">
                                                <span class="note-card-categorie {{ class }} ">{{ cat }} </span>
                                                <h4 class="note-card-title">{{ title }} </h4>
                                                <p class="note-card-text">{{ summary }} </p>
                                                <a class="btn btn-primary note-card-btn text-uppercase {{ class }} " href="{{ base_url~'/'~path }} ">Leer Más</a>
                                        </div>
                                    </div>
                                </div>
                {% endfor %}
                </div>
            </div>
        </div>
</section>

